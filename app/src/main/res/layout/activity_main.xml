<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#212121">

    <LinearLayout
        android:id="@+id/linearBookingTiket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:padding="10dp"
            android:src="@drawable/ic_navigate_back"/>

        <TextView
            android:background="@color/colorPrimaryDark"
            android:id="@+id/btnBookingTiket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffca28"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Pilih Tiket Event"/>

    </LinearLayout>


    <TextView
        android:id="@+id/txtNamaEvent"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/goldman"
        android:text="Ticket for Java Jazz Festival Prambanan 2016"/>

    <TextView
        android:id="@+id/txtTanggalEvent"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/goldman"
        android:text="Tanggal 17 Agustus 2017"/>


    <ListView android:id="@+id/list_data"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnGetCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#000000"
        android:textColor="@color/goldman"
        android:text="Submit"/>
</LinearLayout>